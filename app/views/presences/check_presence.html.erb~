<%= form_tag lab_class_update_presence :method => :post do %>

<table>
  <tr>
    <th>Student</th>
    <th>Presence</th>
  </tr>
      <% @presences.each do |presence| %>
        <%= fields_for "presences[]", presence do |f| %>
  <tr>
    <td><%= f.label presence.student.name %></td>
    <td><%= f.check_box :presence %></td>
   </tr>
        <% end %>
      <% end %>
</table>
  <%= submit_tag "Check presence" %>
<% end %>

