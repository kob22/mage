<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title><%= full_title(yield(:title)) %></title>
 <%= stylesheet_link_tag    "style", media: "screen" %>

  <%= csrf_meta_tags %>
<!--  jquery core -->
<script src="/assets/jquery-1.4.1.min.js" type="text/javascript"></script>

<!-- Custom jquery scripts -->
<script src="/assets/custom_jquery.js" type="text/javascript"></script>
<!-- MUST BE THE LAST SCRIPT IN <HEAD></HEAD></HEAD> png fix -->
<script src="/assets/jquery.pngFix.pack.js" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function(){
$(document).pngFix( );
});
</script>
</head>
<body id="login-bg"> 
<!-- Start: page-top-outer -->
<div id="page-top-outer">    



</div>
<!-- End: page-top-outer -->
	
<div class="clear">&nbsp;</div>
 
<!--  start nav-outer-repeat................................................................................................. START -->
<div class="nav-outer-repeat"> 
<!--  start nav-outer -->
<div class="nav-outer"> 

		<!-- start nav-right -->
		<div id="nav-right">

			<div class="nav-divider">&nbsp;</div>
		        <% if current_user %>
          		<div class="login-info">Logged in as <%= current_user.title %> <%= current_user.name %> <%= current_user.surname %>.</div>
			<div class="nav-divider">&nbsp;</div>
          		<div class="login-info"><%= link_to "Log Out", logout_path %></div>
          		<% else %>
          		<div class="login-info"><%= link_to "Sign Up", signup_path %></div>
			<div class="nav-divider">&nbsp;</div>
			<div class="login-info"><%= link_to "Log In", login_path %></div>
        		<% end %>
			<div class="clear">&nbsp;</div>
		
	
		</div>
		<!-- end nav-right -->


</div>
<div class="clear"></div>
<!--  start nav-outer -->
</div>
<!--  start nav-outer-repeat................................................... END -->
<!-- Start: login-holder -->
<div id="login-holder">
     <% flash.each do |name, msg| %>
	<!--  start message-green -->
			<div id="message">
			<div id="message-error"><%= content_tag :div, msg, id: "flash_#{name}" %></div>
			</div>
	<!--  end message-green -->
      <% end %>
<%= yield %>
			<div id="message">
			<div id="message-error"><%= debug(params) if Rails.env.development? %></div>
			</div>

</div>
<!-- End: login-holder -->
</body>
</html>
